<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!--Text-->
    <style name="DefaultText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">@dimen/font_size_text</item>
        <item name="android:layout_marginTop">1.5sp</item>
        <item name="android:layout_marginBottom">1.5sp</item>
    </style>
    <style name="DefaultText.Title">
        <item name="android:textColor">#282828</item>
        <item name="android:textSize">@dimen/font_size_page_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">15sp</item>
    </style>

    <style name="InlineText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--Input-->
    <style name="DefaultInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!--Button-->
    <style name="DefaultButton">
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
